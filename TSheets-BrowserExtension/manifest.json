{
    "manifest_version": 3,
    "name": "TSheets Reminder",
    "version": "0.0.1",
    "description": "TSheets Extension",
    "permissions": ["storage", "activeTab"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"]
      }
    ]
  }
  